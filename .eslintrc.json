{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": ["react", "jsx-a11y"],
  "rules": {
    "jsx-a11y/label-has-for": [
      2,
      {
        "allowChildren": true
      }
    ]
  },
  "settings": {
    "react": {
      "version": "16"
    }
  }
}
